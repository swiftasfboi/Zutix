-- PREMIUM TOGGLE
-----------------------------------------
local toggleRow = Instance.new("Frame")
toggleRow.Parent = main
toggleRow.Position = UDim2.new(0, 15, 1, -120)
toggleRow.Size = UDim2.new(1, -30, 0, 48)
toggleRow.BackgroundTransparency = 1

local toggleLabel = Instance.new("TextLabel")
toggleLabel.Parent = toggleRow
toggleLabel.Position = UDim2.new(0, 0, 0, 0)
toggleLabel.Size = UDim2.new(0.6, 0, 1, 0)
toggleLabel.Text = "Paste textures"
toggleLabel.Font = Enum.Font.Gotham
toggleLabel.TextSize = 16
toggleLabel.TextColor3 = Color3.fromRGB(230, 230, 240)
toggleLabel.BackgroundTransparency = 1
toggleLabel.TextXAlignment = Enum.TextXAlignment.Left

local toggle = Instance.new("Frame")
toggle.Parent = toggleRow
toggle.AnchorPoint = Vector2.new(1, 0.5)
toggle.Position = UDim2.new(1, 0, 0.5, 0)
toggle.Size = UDim2.new(0, 60, 0, 30)
toggle.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
toggle.BorderSizePixel = 0
Instance.new("UICorner", toggle).CornerRadius = UDim.new(1, 0)

local circle = Instance.new("Frame")
circle.Parent = toggle
circle.Size = UDim2.new(0, 26, 0, 26)
circle.Position = UDim2.new(0.05, 0, 0.07, 0)
circle.BackgroundColor3 = Color3.fromRGB(180, 180, 195)
circle.BorderSizePixel = 0
Instance.new("UICorner", circle).CornerRadius = UDim.new(1,0)

local toggled = false

local function setToggle(val)
	toggled = val
	if toggled then
		toggle.BackgroundColor3 = Color3.fromRGB(55, 150, 255)
		circle:TweenPosition(UDim2.new(0.55, 0, 0.07, 0), "Out", "Quad", 0.15)
	else
		toggle.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
		circle:TweenPosition(UDim2.new(0.05, 0, 0.07, 0), "Out", "Quad", 0.15)
	end
end

toggleRow.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		setToggle(not toggled)
	end
end)

