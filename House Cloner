local function newTab(name, xPos)
	local tab = Instance.new("TextButton")
	tab.Parent = tabFrame
	tab.Position = UDim2.new(0, xPos, 0, 0)
	tab.Size = UDim2.new(0, 120, 1, 0)
	tab.BackgroundColor3 = Color3.fromRGB(35, 35, 42)
	tab.Text = name
	tab.Font = Enum.Font.GothamMedium
	tab.TextSize = 15
	tab.TextColor3 = Color3.fromRGB(200,200,215)
	tab.BorderSizePixel = 0
	Instance.new("UICorner", tab).CornerRadius = UDim.new(0,8)
	return tab
end

